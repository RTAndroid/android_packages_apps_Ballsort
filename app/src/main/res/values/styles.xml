<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryAccent</item>
    </style>

    <style name="TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabCaptions</item>
    </style>

    <style name="TabCaptions" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="FloatingBox">
        <item name="android:layout_width">600dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="HeaderText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="HeaderDivider">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/colorPrimaryAccent</item>
    </style>

    <style name="LabelText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ColorImage">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">100dp</item>
    </style>

</resources>
